@model CourseModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="container">
        <div class="card border-danger mb-3">
            <div class="card-header">Confirmation!!</div>
            <div class="card-body">
                <h1 class="card-title text-danger">
                    Sure to delete the record?
                </h1>
                <div class="form-group row">
                    <label asp-for="CourseId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="CourseId" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CourseName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="CourseName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="CourseDescription" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="CourseDescription" class="form-control" readonly="readonly" cols="12" rows="2"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-outline-success float-right mr-2" asp-action="Index" asp-controller="Course">Cancel</button>
                        <button type="submit" class="btn btn-outline-danger float-right mr-2" asp-action="Delete" asp-controller="Course">Delete Record</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>