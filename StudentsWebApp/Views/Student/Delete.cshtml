@model StudentModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="container">
        <div class="card border-danger mb-3">
            <div class="card-header">Confirmation!!</div>
            <div class="card-body">
                <h1 class="card-title text-danger">
                    Sure to delete the record?
                </h1>
                <div class="form-group row">
                    <label asp-for="StudentId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="StudentId" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StudentName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="StudentName" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-outline-danger float-right" asp-action="Delete" asp-controller="Student">Delete Record</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>